/* pages/send/send.wxss */
page{
    width:100%;
    height:100%;
    overflow: auto;
}
.container{
  width:100%;
  height:100%;
  text-align: center;
}
.top{
  width:100%;
  height:50px;
  background-color: #FFA54F;
  position:absolute;
  top:0px;
}
.title{
  position:absolute;
  top:10px;
  left:140px;
}
.send{
  height:30px;
  width:50px;
  position:absolute;
  right:20px;
  top:10px;
  background-color: #CDCDB4;
  line-height:25px;
  border-radius: 1.5em;
  font-size: 15px;
}
.center{
  width:100%;
  height:280px;
  position:absolute;
  top:50px;
}
.input{
  width:80%;
  height:120px;
  position:relative;
  top:30px;
  left:30px;
  border:1px black solid;
  text-align: left;
  padding:10px;
}
.addPhoto{
  width:50px;
  height:50px;
  position:relative;
  top:60px;
  left:30px;
  text-align: center;
  font-size: 30px;
  font-weight: 5px;
  background-color: #EEE8CD;
}